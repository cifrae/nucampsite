a, a:hover {
    color: inherit;
    text-decoration: none;
}
  
body {
    font-family: "Open Sans", sans-serif;
}

.carousel {
    border: solid $color-secondary;
}

.carousel-caption {
    background-color: $color-black-transparent;
}

#carouselButton {
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 100;
}

h1, h2, h3 {
    font-family: "Lobster", cursive;
}

h2 {
    color: #3046C5;
}

header {
    h2 {
        color: $color-pale;
    }
}

.jumbotron {
    background-image: linear-gradient(to right, $color-secondary, $color-primary, $color-dark);
    color: white;
    margin: 0;
    padding: 30px;
}

.navbar {
    background-color: $color-mid;
}

.row-content {
    border-bottom: 1px ridge;
    min-height: 200px;
    padding: 50px 0;
}

.site-footer {
    background-image: linear-gradient($color-pale, white);
    padding: 20px 0;
}